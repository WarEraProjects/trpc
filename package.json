{
	"name": "@wareraprojects/api",
	"version": "0.1.4",
	"description": "tRPC communication layer for WarEra (frontend and backend compatible)",
	"repository": {"url": "https://github.com/WarEraProjects/trpc"},
	"license": "MIT",
	"type": "module",
	"main": "./dist/index.cjs",
	"module": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"import": "./dist/index.js",
			"require": "./dist/index.cjs"
		}
	},
	"files": [
		"dist",
		"src/api/warera-openapi.d.ts",
		"src/api/Responses.d.ts"
	],
	"sideEffects": false,
	"scripts": {
		"build": "tsup",
		"dev": "tsup --watch",
		"clean": "rimraf dist",
		"prepare": "npm run build",
		"prepublishOnly": "npm run build",
		"openapi": "openapi-typescript https://api2.warera.io/openapi.json -o src/api/warera-openapi.d.ts",
		"test": "tsx -r dotenv/config tests/test-api.ts",
		"allEndpoints": "tsx -r dotenv/config tests/AllEndpoints.ts"
	},
	"dependencies": {
		"@trpc/client": "^10.45.2",
		"@trpc/server": "^10.45.2"
	},
	"devDependencies": {
		"@types/node": "^22.10.5",
		"dotenv": "^16.4.5",
		"openapi-typescript": "^7.4.2",
		"rimraf": "^6.0.1",
		"tsx": "^4.16.2",
		"tsup": "^8.3.5",
		"typescript": "^5.7.3"
	}
}
